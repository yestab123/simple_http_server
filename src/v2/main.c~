#include <netinet/in.h>
#include <sys/socket.h>
#include <string.h>
#include <sys/types.h>
#include <sys/epoll.h>
#include <fcntl.h>
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

void set_non_block(int fd){
  int option=fcntl(fd,F_GETFL);
  option=option|O_NONBLOCK;
  fcntl(fd,F_SETFL,option);
}
